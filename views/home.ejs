<%- include("header") -%>
<section class="colored-section" id="title">
      <div class="container-fluid">
        <!-- Title -->

        <div class="row search-section">
          <div class="col-lg-6">
            <h1 class="big-heading">Purchase your home with confidence</h1>
            <h4 class="feature-title">Everything you need from one report card</h3>
            <!-- SEARCH -->
            <form class="input-group rounded search-bar" action="/search" method="POST">

                <input type="search" name="search" class="form-control rounded" placeholder="Search" aria-label="Search"
                  aria-describedby="search-addon" />
              <button class="input-group-text border-0" type="submit" id="search-addon">
                  <i class="fas fa-search"></i>
                </button>
            </form>
          </div>

          <div class="col-lg-6">
            <img
              class="title-image"
              src="images/icon.png"
              alt="icon"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Features -->

    <section class="white-section" id="features">
      <div class="container-fluid">
        <div class="row">
          <div class="feature-box col-lg-4">
            <i class="icon fas fa-check-circle fa-4x"></i>
            <h3 class="feature-title">Easy to use.</h3>
            <p>Take the headache out of home buying.</p>
          </div>

          <div class="feature-box col-lg-4">
            <i class="icon fas fa-bullseye fa-4x"></i>
            <h3 class="feature-title">Elite Clientele</h3>
            <p>See our reviews from happy customers.</p>
          </div>

          <div class="feature-box col-lg-4">
            <i class="icon fas fa-heart fa-4x"></i>
            <h3 class="feature-title">Guaranteed to work.</h3>
            <p>Data cross referenced to find your dream home.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Testimonials -->
    <section class="colored-section" id="testimonials">
      <div id="testimonial-carousel" class="carousel slide" data-ride="false">
        <div class="carousel-inner">
          <div class="carousel-item active container-fluid">
            <h2 class="testimonial-text">
              This changes the real estate game. Whether it's investing or finding your first home, Klove gets the job done. 
            </h2>
            <img class="testimonial-image" src="images/girl.png" alt="dog-profile"
            />
            <em>- Scarlett, New York</em>
          </div>
          <div class="carousel-item container-fluid">
            <h2 class="testimonial-text">
              It's scary commiting to your first home. The data report really made it easy for me and my family decide on our forever home. 
            </h2>
            <img class="testimonial-image" src="images/man.png" alt="lady-profile"/>
            <em>- Alex, Illinois</em>
          </div>
          <div class="carousel-item container-fluid">
            <h2 class="testimonial-text">
              As an investor, I think this is the future. Take out the middle man and have techonolgy find the deals for us!
            </h2>
            <img class="testimonial-image" src="images/lily.png" alt="dog-profile"
            />
            <em>- Lily, Austin</em>
          </div>
        </div>
        <a
          class="carousel-control-prev"
          href="#testimonial-carousel"
          role="button"
          data-slide="prev"
        >
          <span class="carousel-control-prev-icon"></span>
        </a>
        <a
          class="carousel-control-next"
          href="#testimonial-carousel"
          role="button"
          data-slide="next"
        >
          <span class="carousel-control-next-icon"></span>
        </a>
      </div>
    </section>

    <!-- Press -->

    <section class="colored-section" id="press">
      <img class="press-logo" src="images/techcrunch.png" alt="tc-logo" />
      <img class="press-logo" src="images/tnw.png" alt="tnw-logo" />
      <img class="press-logo" src="images/bizinsider.png" alt="biz-insider-logo"/>
      <img class="press-logo" src="images/mashable.png" alt="mashable-logo" />
    </section>

    <!-- Pricing -->

    <section class="white-section" id="pricing">
      <h2 class="section-heading">Customized for all your needs</h2>
      <h5>We are working towards expanding our application for property search engine with valuation calculated by user perferences.</h5>
      <img class="pricing-image" src="images/couple.jpeg" alt="couple-picture" />
      <section class="white-section" id="pricing">

      <!-- Call to Action -->

    <section class="colored-section" id="cta">
      <div class="container-fluid">
        <h3 class="big-heading">
          The best deal finder for real estate.
        </h3>
        <button class="download-button btn btn-lg btn-outline-dark" type="button">
          <i class="fab fa-apple"></i> Coming soon
        </button>
        <button class="download-button btn btn-lg btn-outline-dark" type="button">
          <i class="fab fa-google-play"></i> Coming soon
        </button>
      </div>
    </section>

    <!-- Footer -->

    <footer class="white-section" id="footer">
      <div class="container-fluid">
        <i class="social-icon fab fa-facebook-f"></i>
        <i class="social-icon fab fa-twitter"></i>
        <i class="social-icon fab fa-instagram"></i>
        <i class="social-icon fas fa-envelope"></i>
        <p>Â© Copyright 2021 Klove</p>
      </div>
    </footer>
<%- include("footer") -%>